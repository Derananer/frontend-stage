mixin getClass( options )
  - options = options || {}
  if options.className
    |  #{options.className}
  else if options.attr && options.attr.className
    |  #{options.attr.className}
mixin getAttrs( options )
  - options = options || {}
  - each val, key in options
    unless key == 'className' || key == 'tag'
      |  #{key}="#{val}"

